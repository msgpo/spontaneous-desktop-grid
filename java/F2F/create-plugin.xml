<?xml version="1.0" encoding="UTF-8"?>
<project default="make" name="build">
	<target name="clean">
		<delete file="../sip-communicator/sc-bundles/f2f.jar"/>
		<delete>
		    <fileset dir="build"/>
		</delete>
	</target>
	<target name="make">
		<delete dir="../sip-communicator/sip-communicator.bin"/>
		<jar 
			basedir="bin"
			destfile="build/F2F.jar"
		/>
		<copy todir="build/lib">
		    <fileset dir="lib"/>
		</copy>
		<jar 
			basedir="build"
			destfile="../sip-communicator/sc-bundles/f2f.jar"
			manifest="META-INF/MANIFEST.MF"
		/>
		<!-- Does not work reliable, as it is started in the background 
			<pde.exportPlugins destination="build" 
			exportSource="false"
			exportType="zip"
			filename="../sip-communicator/sc-bundles/f2f.jar"
			plugins="f2f_sc_plugin"
			useJARFormat="true"/> -->
	</target>
</project>
